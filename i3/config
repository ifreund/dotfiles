# wallpaper
exec_always --no-startup-id hsetroot -solid '$base03'

# disable tile bars and borders
for_window [class=".*"] border pixel 0

# gaps
gaps inner 20
gaps outer 0

# only enable gaps on a workspace when there is at least one container
smart_gaps on

# transparency, shadows, fade
exec --no-startup-id compton -f
